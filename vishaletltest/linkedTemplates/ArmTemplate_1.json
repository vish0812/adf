							"source": {
								"type": "AzureSqlSource",
								"sqlReaderQuery": "SELECT TOP 1 CoinId, Symbol, Name, PriceChange24hPct\nFROM CryptoMarketData\nWHERE PriceChange24hPct > 20\n  AND CAST(LoadTimestamp AS DATE) = CAST(GETDATE() AS DATE);",
								"queryTimeout": "02:00:00",
